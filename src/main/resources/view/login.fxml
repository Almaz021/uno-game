<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml" fx:controller="ru.itis.fisd.client.gui.controller.LoginFxController"
          alignment="CENTER" hgap="10" vgap="10">
    <Label text="Login" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label fx:id="error" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Button text="Cancel" fx:id="cancelButton" prefHeight="26.0" prefWidth="100.0" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <Button text="Login" fx:id="login" prefHeight="26.0" prefWidth="160.0" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
</GridPane>
